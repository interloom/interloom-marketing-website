---
layout: base.njk
---
<div class="docs-layout">
  <aside class="docs-sidebar">
    <nav class="docs-nav">
      {%- for section in docsNav.sections %}
      <div class="docs-nav-section">
        <h4 class="docs-nav-section-title">{{ section.title }}</h4>
        <ul class="docs-nav-list">
          {%- for item in section.items %}
          <li>
            <a href="{{ item.url | url }}" {% if page.url == item.url %}class="active"{% endif %}>
              {{ item.title }}
            </a>
          </li>
          {%- endfor %}
        </ul>
      </div>
      {%- endfor %}
    </nav>
  </aside>
  <article class="docs-content">
    <header class="docs-header">
      <h1>{{ title }}</h1>
    </header>
    <div class="docs-body">
      {{ content | safe }}
    </div>
  </article>
</div>
